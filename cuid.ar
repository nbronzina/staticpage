    <script>
        // FUNCIONES DE ACCESIBILIDAD
        
        function adjustTextSize(size) {
            const body = document.body;
            body.classList.remove('text-size-normal', 'text-size-large', 'text-size-xlarge');
            body.classList.add('text-size-' + size);
            
            // Guardar preferencia
            localStorage.setItem('textSize', size);
            
            // Feedback visual
            alert('Tama√±o de texto ajustado a: ' + size);
        }
        
        function toggleHighContrast() {
            const body = document.body;
            if (body.style.filter === 'contrast(1.5)') {
                body.style.filter = 'none';
                localStorage.setItem('highContrast', 'false');
                alert('Alto contraste desactivado');
            } else {
                body.style.filter = 'contrast(1.5)';
                localStorage.setItem('highContrast', 'true');
                alert('Alto contraste activado');
            }
        }
        
        // Restaurar preferencias al cargar
        window.addEventListener('load', function() {
            const textSize = localStorage.getItem('textSize');
            if (textSize) {
                document.body.classList.add('text-size-' + textSize);
            }
            
            const highContrast = localStorage.getItem('highContrast');
            if (highContrast === 'true') {
                document.body.style.filter = 'contrast(1.5)';
            }
        });
        
        // Smooth scroll para links internos
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                if (href !== '#') {
                    e.preventDefault();
                    const target = document.querySelector(href);
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                        // Foco en el elemento para accesibilidad
                        target.focus();
                    }
                }
            });
        });
    </script>
